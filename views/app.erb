<!doctype html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <title>Core | Actn.io</title>
  <meta name="description" content="Actn.io">
  <meta name="author" content="Hackberry">

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/assets/application.css" /> 
  

     
  <%= csrf_meta_tag %>  
</head>
<body <%= %Q(data-username="#{current_user.first_name}") if current_user %>>

  <div id="main"></div>  

  <% Dir.glob("#{Actn::Api.root}/views/templates/**/*.mustache").each do |tmp| %>
  <script id="mst_<%= File.basename(tmp,".mustache") %>" type="x-tmpl-mustache">
  <%= File.read(tmp) %>
  </script>
  <% end %>
  
  <script src="/assets/application.js"></script>           
  <script>app.start();</script>

</body>
</html>
